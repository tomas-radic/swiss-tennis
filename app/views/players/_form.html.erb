<%= form_with(model: player, local: true) do |form| %>
  <div class="row">
    <div class="col-lg-6">
      <div class="field form-group">
        <%= form.label :first_name, 'Meno' %><br />
        <%= form.text_field :first_name, autofocus: true, class: add_error_class_to('form-control', @player, :first_name) %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="field form-group">
        <%= form.label :last_name, 'Priezvisko' %><br />
        <%= form.text_field :last_name, class: add_error_class_to('form-control', @player, :last_name) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="field form-group">
        <%= form.label :phone, 'Telefónne číslo' %><br />
        <%= form.text_field :phone, class: 'form-control' %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="field form-group">
        <%= form.label :email, 'Email' %><br />
        <%= form.email_field :email, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="field form-group">
        <%= form.label :birth_year, 'Rok narodenia' %><br />
        <%= form.number_field :birth_year, class: 'form-control' %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :category_id, 'Kategória' %><br />
        <%= form.collection_select :category_id, Category.default, :id, :name, {}, { class: add_error_class_to('form-control', @player, :category) } %>
      </div>
    </div>
  </div>

  <hr>
  <div class="row">
    <div class="col">
      <div class="custom-control custom-checkbox">
        <%= form.check_box :consent_given, class: 'custom-control-input' %>
        <%= form.label :consent_given, 'Tento hráč podpísal súhlas na zverejnenie svojich osobných údajov na stránke matotenis.sk', class: 'custom-control-label' %>
      </div>
    </div>
  </div>
  <hr>

  <div class="row">
    <div class="col">
      <div class="actions">
        <%= submit_tag 'Potvrdiť', class: 'btn btn-lg btn-success my-1' %>
        <%= link_to 'Zrušiť', enrollments_path, class: 'btn btn-lg btn-outline-success my-1' %>
      </div>
    </div>
  </div>
<% end %>
