<div class="row">
  <div class="col">
    <p class="lead float-left">
      Zoznam zápasov |
      <%= round_element(@round, current_user) %>
    </p>
    <% if @season && @round %>
      <div class="form-group float-right">
        <%= select_tag :round_id, options_from_collection_for_select(@season.rounds.default, "id", "full_label", @round.id), class: 'form-control reloading-page', data: { url: request.path, param_name: 'round' } %>
      </div>
    <% end %>
  </div>
</div>

<% if @season && @round && policy(Match).create? %>
  <div class="row">
    <div class="col">
      <p><%= link_to 'Nový zápas', new_match_path(round_id: @round.id), class: 'btn btn-sm btn-success my-1' %></p>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col">
    <ul class="nav nav-tabs" id="tab-matches" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="finished-tab" data-toggle="tab" href="#finished" role="tab" aria-controls="finished" aria-selected="true">Odohraté</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pending-tab" data-toggle="tab" href="#pending" role="tab" aria-controls="pending" aria-selected="false">Naplánované</a>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <a class="nav-link" id="draft-tab" data-toggle="tab" href="#draft" role="tab" aria-controls="draft" aria-selected="false">Nezverejnené</a>
        </li>
      <% end %>
    </ul>
    <div class="tab-content" id="tab-matches-content">
      <div class="tab-pane fade show active" id="finished" role="tabpanel" aria-labelledby="finished-tab">
        <%= render 'table', matches: @published_matches.finished.includes(:winner) %>
      </div>
      <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="pending-tab">
        <%= render 'table', matches: @published_matches.pending %>
      </div>
      <% if user_signed_in? %>
        <div class="tab-pane fade" id="draft" role="tabpanel" aria-labelledby="draft-tab">
          <%= render 'table', matches: @draft_matches %>
        </div>
      <% end %>
    </div>
  </div>
</div>
