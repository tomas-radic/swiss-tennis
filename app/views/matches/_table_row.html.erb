<tr class="<%= matches_table_row_color_class(match) %>">
  <td>
    <% if match.player1_id == match.winner_id %>
      <strong>
        <%= link_to(player_name_by_consent(match.player1, current_user), player_path(match.player1), class: 'quiet-link') %>
      </strong>
    <% elsif match.player1 == match.retired_player %>
      <span class="text-secondary">
        <%= link_to(player_name_by_consent(match.player1, current_user), player_path(match.player1), class: 'quiet-link') %>
      </span>
    <% else %>
      <%= link_to(player_name_by_consent(match.player1, current_user), player_path(match.player1), class: 'quiet-link') %>
    <% end %>
    (<%= match.player1.rankings.find { |r| r[:round_id] == match.round.id }&.points.to_i %>b)
    <br>
    <small>
      <i>
        <% if match.player1.phone.present? && match.player1.consent_given? %>
          <%= link_to match.player1.phone, "tel:#{match.player1.phone}" %>
        <% else %>
          <%= link_to_manager_phone('tel. č. u organizátora') %>
        <% end %>
      </i>
    </small>
  </td>
  <td>
    <% if match.player2_id == match.winner_id %>
      <strong>
        <%= link_to(player_name_by_consent(match.player2, current_user), player_path(match.player2), class: 'quiet-link') %>
      </strong>
    <% elsif match.player2 == match.retired_player %>
      <span class="text-secondary">
        <%= link_to(player_name_by_consent(match.player2, current_user), player_path(match.player2), class: 'quiet-link') %>
      </span>
    <% else %>
      <%= link_to(player_name_by_consent(match.player2, current_user), player_path(match.player2), class: 'quiet-link') %>
    <% end %>
    (<%= match.player2.rankings.find { |r| r[:round_id] == match.round.id }&.points.to_i %>b)
    <br>
    <small>
      <i>
        <% if match.player2.phone.present? && match.player2.consent_given? %>
          <%= link_to match.player2.phone, "tel:#{match.player2.phone}" %>
        <% else %>
          <%= link_to_manager_phone('tel. č. u organizátora') %>
        <% end %>
      </i>
    </small>
  </td>
  <td>
    <%= match.note %>
  </td>
  <td>
    <%= MatchDecorator.new(match).score %>
  </td>
  <td>
    <%= link_to 'Detail', match_path(match), class: 'btn btn-sm btn-success' %>
  </td>
</tr>
