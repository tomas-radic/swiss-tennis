<div class="row">
  <div class="col-md-3 hidden-sm-down"></div>
  <div class="col">
    <h2><%= "Nový zápas, #{@round.full_label}" %></h2>
    <hr>

    <%= form_with(model: @match, local: true) do |form| %>
      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <%= form.label :player1_id, 'Hráč 1' %><br />
            <%= form.collection_select :player1_id, @available_players, :id, :name, { include_blank: 'Žiadny hráč' }, { class: add_error_class_to('form-control', @match, :player1) } %>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="form-group">
            <%= form.label :player2_id, 'Hráč 2' %><br />
            <%= form.collection_select :player2_id, @available_players, :id, :name, { include_blank: 'Žiadny hráč' }, { class: add_error_class_to('form-control', @match, :player2) } %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <%= form.label :play_date, 'Dátum zápasu' %><br />
            <%= form.date_field :play_date, class: 'form-control' %>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="custom-control custom-checkbox">
            <br><br>
            <%= form.check_box :published, class: 'custom-control-input' %>
            <%= form.label :published, 'Zápas je zverejnený', class: 'custom-control-label' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="form-group">
            <%= form.label :note, 'Poznámka' %>
            <%= form.text_area :note, class: 'form-control' %>
          </div>
        </div>
      </div>

      <%= form.hidden_field :round_id %>

      <div class="row">
        <div class="col">
          <div class="actions">
            <%= submit_tag 'Potvrdiť', class: 'btn btn-lg btn-success my-1' %>
            <%= link_to 'Zrušiť', round_path(@round), class: 'btn btn-lg btn-outline-success my-1' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-3 hidden-sm-down"></div>
</div>
