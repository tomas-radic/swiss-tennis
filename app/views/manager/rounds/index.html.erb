<div class="row">
  <div class="col">
    <p class="lead float-left">Všetky kolá</p>
    <div class="float-right">
      <%= link_to 'Nové kolo', new_manager_round_path, class: 'btn btn-sm btn-success my-1' %>
    </div>
  </div>
</div>

<hr>
<% if @rounds.any? %>
  <div class="table-responsive my-1">
    <table class="table table-sm">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Označenie</th>
          <th scope="col">Stav zápasov</th>
        </tr>
      </thead>
      <tbody>
        <% @rounds.each do |round| %>
          <% all_matches_count = round.matches.size %>
          <% finished_matches_count = round.finished_matches.size %>
          <tr>
            <td><%= round.position %></td>
            <td><%= link_to round.full_label, manager_round_path(round), class: 'quiet-link' %></td>
            <td class="text-nowrap <%= "text-success" if finished_matches_count == all_matches_count %>">
              <%= finished_matches_count %> / <%= all_matches_count %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="row">
    <div class="col">
      <p class="lead text-center">V tejto sezóne ešte nebolo vypísané žiadne kolo.</p>
    </div>
  </div>
<% end %>
