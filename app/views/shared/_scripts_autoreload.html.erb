<script type="text/javascript">
  var pageLoadedAt = $.now();
  var reloadingNow = false;

  $(document).on('turbolinks:load', function() {

    $(window).scroll(function() {
      if (!reloadingNow && ($.now() - pageLoadedAt > 7200000)) { // two hours
        reloadingNow = true;
        location.reload();
      }
    });
  });
</script>
