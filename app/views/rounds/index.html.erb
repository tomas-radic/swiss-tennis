<%= link_to 'Nové kolo', new_round_path, class: 'btn btn-sm btn-success my-1' %>

<p class="lead">Kolá sezóny <%= @season.name %></p>
<% if @rounds.any? %>
  <div class="table-responsive my-1">
    <table class="table table-sm">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Označenie</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @rounds.each do |round| %>
          <tr>
            <td><%= round.position %></td>
            <td><%= round.full_label %></td>
            <td>
              <%= link_to 'Detail', round_path(round), class: 'btn btn-sm btn-success' %>
              <%= link_to 'Upraviť', edit_round_path(round), class: 'btn btn-sm btn-success' %>
              <%= link_to 'Odstrániť', round_path(round), method: :delete, data: { confirm: "Toto kolo bude zmazané aj s plánovanými zápasmi." }, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="row">
    <div class="col">
      <p class="lead text-center">Žiadne kolá.</p>
    </div>
  </div>
<% end %>
